<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/business_page_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="BUSINESS NAME"
        android:textSize="28sp"
        android:visibility="visible"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/business_page_mob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="BUSINESS MOBILE"
        android:textSize="20sp"
        android:visibility="visible"
        android:layout_gravity="center"/>
        <TextView
            android:id="@+id/business_page_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="BUSINESS EMAIL"
            android:textSize="20sp"
            android:visibility="visible"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/busi_page_Image"
            android:layout_width="255dp"
            android:layout_height="255dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:src="@drawable/burger"
            android:layout_marginTop="48dp"/>
    </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
        android:text="HOME"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp"
        android:id="@+id/home_bus"/>


</androidx.constraintlayout.widget.ConstraintLayout>