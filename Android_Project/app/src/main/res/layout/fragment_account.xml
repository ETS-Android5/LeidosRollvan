<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AccountFragment">

    <include
        android:id="@+id/include"
        layout="@layout/appbar" />

    <ImageButton
        android:id="@+id/profilePic"
        android:layout_width="48dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="#00000000"
        android:scaleType="centerCrop"
        android:src="@drawable/person"
        android:text="profilePic"
        app:layout_constraintEnd_toEndOf="@+id/include"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="@+id/include"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="168dp"
        android:layout_height="29dp"
        android:text="Sample User"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/include"
        app:layout_constraintEnd_toEndOf="@+id/include"
        app:layout_constraintHorizontal_bias="0.298"
        app:layout_constraintStart_toEndOf="@+id/profilePic"
        app:layout_constraintTop_toTopOf="@+id/include"
        app:layout_constraintVertical_bias="0.592" />

    <Button
        android:id="@+id/yourFavourites"
        android:layout_width="344dp"
        android:layout_height="58dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="500dp"
        android:background="#00000000"
        android:drawableLeft="@drawable/fav"
        android:text="Your Favourites"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/help"
        android:layout_width="344dp"
        android:layout_height="58dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="480dp"
        android:background="#00000000"
        android:drawableLeft="@drawable/help"
        android:text="Help"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yourFavourites"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/about"
        android:layout_width="344dp"
        android:layout_height="58dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="400dp"
        android:background="#00000000"

        android:drawableLeft="@drawable/info"
        android:text="About"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/help"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/savedPlaces"
        android:layout_width="344dp"
        android:layout_height="58dp"
        android:layout_marginTop="30dp"
        android:background="#00000000"
        android:drawableLeft="@drawable/ic_location"
        android:text="Saved Places"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about" />

    <Button
        android:id="@+id/notifications"
        android:layout_width="344dp"
        android:layout_height="58dp"
        android:layout_marginTop="30dp"
        android:background="#00000000"
        android:drawableLeft="@drawable/noti"
        android:text="Notifications"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/savedPlaces" />

    <Button
        android:id="@+id/editAccount"
        android:layout_width="344dp"
        android:layout_height="58dp"
        android:layout_marginTop="30dp"
        android:background="#00000000"
        android:drawableLeft="@drawable/edit"
        android:text="Edit Account"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notifications" />

    <Button
        android:id="@+id/signOut"
        android:layout_width="344dp"
        android:layout_height="58dp"
        android:layout_marginTop="30dp"
        android:background="#00000000"
        android:drawableLeft="@drawable/signout"
        android:drawableTint="@color/red"
        android:text="Sign Out"
        android:textColor="@color/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editAccount" />


</androidx.constraintlayout.widget.ConstraintLayout>