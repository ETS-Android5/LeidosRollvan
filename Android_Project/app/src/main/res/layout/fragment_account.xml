<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.AccountFragment"
    android:fillViewport="false">

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false"
    tools:ignore="MissingConstraints"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="32dp"
        android:layout_gravity="left">

        <Button
            android:id="@+id/yourFavourites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/fav"
            android:text="Your Favourites"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/help"
            android:text="Help"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/info"
            android:text="About"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/savedPlaces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/ic_location"
            android:text="Saved Places"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/noti"
            android:text="Notifications"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/editAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/edit"
            android:text="Edit Account"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/signOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="#00000000"
            android:onClick="toLoginPage2"
            android:drawableLeft="@drawable/signout"
            android:drawableTint="@color/red"
            android:text="Sign Out"
            android:textColor="@color/red"
            tools:ignore="UsingOnClickInXml" />

    </LinearLayout>
</ScrollView>

<include
    android:id="@+id/include"
    layout="@layout/appbar" />

<ImageButton
    android:id="@+id/profilePic"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginTop="5dp"
    android:background="#00000000"
    android:scaleType="centerCrop"
    android:src="@drawable/person"
    android:text="profilePic"
    app:layout_constraintEnd_toEndOf="@+id/include"
    app:layout_constraintHorizontal_bias="0.044"
    app:layout_constraintStart_toStartOf="@+id/include"
    app:layout_constraintTop_toTopOf="parent"
    tools:ignore="SpeakableTextPresentCheck" />

<TextView
    android:id="@+id/userName"
    android:layout_width="168dp"
    android:layout_height="29dp"
    android:text="Sample User"
    android:textSize="20sp"
    app:layout_constraintBottom_toBottomOf="@+id/include"
    app:layout_constraintEnd_toEndOf="@+id/include"
    app:layout_constraintHorizontal_bias="0.298"
    app:layout_constraintStart_toEndOf="@+id/profilePic"
    app:layout_constraintTop_toTopOf="@+id/include"
    app:layout_constraintVertical_bias="0.592" />
</androidx.constraintlayout.widget.ConstraintLayout>