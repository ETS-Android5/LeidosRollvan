<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/newlisticon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/ic_food_truck_svgrepo_com"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
             />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Notifications To Your Subscribed Users !!"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputNotiBody"
            style="@style/parent"
            android:layout_gravity="center_vertical" >

            <EditText
                android:id="@+id/editTextNotiBody"
                style="@style/modifiedEditText"
                android:hint="Notification Body"
                android:inputType="text"
                android:maxLines="1"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textSize="20dp"
                android:layout_marginTop="100dp"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/send"
            android:text="send"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>